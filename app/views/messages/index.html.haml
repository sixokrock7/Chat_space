.header
  = render "layouts/notifications"
  %p チャットグループが作成されました。

.wrapper
  / = render "messages/side_group-list", collection: @groups, as: :group
  = render 'shared/side_bar'
  .chat
    .chat__contents
      %p.chat__contents-group
      = @group.name
      %p.chat__contents-member
      Members:
      = @group.users.name
    = link_to edit_group_path(@group) do
      .chat__contents-button
        %p.edit Edit

    = render @messages

  .form
    .form__message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message--post', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = f.file_field :image, class: 'hidden', onchange: "$(this).submit();"
            = fa_icon 'picture-o', class: 'icon'
        = f.submit 'Send', class: 'form__submit'
